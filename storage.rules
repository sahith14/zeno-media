// storage.rules
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /thumbnails/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == 'zenomedia.work@gmail.com';
    }
    match /digital/{allPaths=**} {
      allow read: if false;
      allow write: if request.auth != null && request.auth.token.email == 'zenomedia.work@gmail.com';
    }
    match /product-images/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == 'zenomedia.work@gmail.com';
    }
  }
}
