rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /projects/{id} {
      allow read: if true;
      allow write: if request.auth.token.email == "zenomedia.work@gmail.com";
    }

    match /products/{id} {
      allow read: if true;
      allow write: if request.auth.token.email == "zenomedia.work@gmail.com";
    }

    match /orders/{id} {
      allow read, write: if request.auth != null;
    }

    match /messages/{id} {
      allow write: if true;
    }
  }
}
